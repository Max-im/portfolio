{
  "name": "tmpl",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Maksym Pozhydaiev <pogidaevmo@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12.16.2"
  },
  "scripts": {
    "i": "npm i --prefix=client",
    "run-server": "NODE_ENV=development nodemon --exec babel-node server",
    "run-client": "npm run start --prefix client",
    "dev": "concurrently \"npm run run-client\" \"npm run run-server\"",
    "lint-staged": "lint-staged",
    "initDb": "bash ./bin/dbSeed",
    "build-server": "rimraf ./dist && babel -d ./dist/server ./server -s",
    "build-client": "npm run build --prefix client && mv client/build dist/client/",
    "heroku-prebuild": "npm run build-server && npm run build-client",
    "heroku-postbuild": "rimraf ./server && rimraf ./client",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "keywords": [],
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/polyfill": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-object-assign": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "helmet": "^3.22.0",
    "jimp": "^0.6.8",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-google-plus-token": "^2.1.0",
    "passport-jwt": "^4.0.0",
    "pdfkit": "^0.11.0",
    "pg": "^7.17.0",
    "pg-hstore": "^2.3.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@babel/register": "^7.7.7",
    "concurrently": "^4.1.2",
    "copyfiles": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.19.1",
    "lint-staged": "^8.2.0",
    "nodemon": "^1.19.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.7.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 10
    },
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "import/prefer-default-export": 0,
      "camelcase": 0,
      "no-console": 0,
      "prefer-destructuring": 0,
      "no-unneeded-ternary": 0,
      "no-plusplus": 0
    }
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint ./server"
  }
}