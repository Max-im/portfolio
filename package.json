{
  "name": "tmpl",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Maxim Pozhidayev <pogidaevmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run start --prefix client\" \"nodemon --exec babel-node bin/dev\" ",
    "install": "cd client && npm install",
    "lint-staged": "lint-staged",
    "initDb": "bash ./bin/dbSeed",
    "build-server": "rimraf ./dist && babel -d ./dist/server ./server -s",
    "build-client": "npm run build --prefix client && mv client/build/ dist/client/",
    "heroku-postbuild": "npm run build-server && npm run build-client",
    "start": "node bin/www"
  },
  "keywords": [],
  "dependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/node": "^7.7.7",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.7",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "jimp": "^0.6.8",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "pg": "^7.17.0",
    "pg-hstore": "^2.3.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@babel/register": "^7.7.7",
    "concurrently": "^4.1.2",
    "copyfiles": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.19.1",
    "lint-staged": "^8.2.0",
    "nodemon": "^1.19.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.7.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 10
    },
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "import/prefer-default-export": 0,
      "camelcase": 0,
      "no-console": 0,
      "prefer-destructuring": 0,
      "no-unneeded-ternary": 0,
      "no-plusplus": 0
    }
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint ./server"
  }
}
