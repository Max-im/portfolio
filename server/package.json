{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:down": "npx sequelize-cli db:migrate:undo:all",
    "dev:migrate:up": "./node_modules/.bin/env-cmd -e development npm run migrate:up",
    "dev:migrate:down": "./node_modules/.bin/env-cmd -e development npm run migrate:down",
    "seeds:up": "npx sequelize-cli db:seed:all",
    "seeds:down": "npx sequelize-cli db:seed:undo:all",
    "dev:seeds:up": "./node_modules/.bin/env-cmd -e development  npm run seeds:up",
    "dev:seeds:down": "./node_modules/.bin/env-cmd -e development npm run seeds:down",
    "dev": "./node_modules/.bin/env-cmd -e development ts-node-dev src/index.ts",
    "test:migrate:up": "./node_modules/.bin/env-cmd -e test npm run migrate:up",
    "test:migrate:down": "./node_modules/.bin/env-cmd -e test npm run migrate:down",
    "test:seeds:up": "./node_modules/.bin/env-cmd -e test npm run seeds:up",
    "test:prepare": "npm run test:migrate:down && npm run test:migrate:up",
    "test:run": "./node_modules/.bin/env-cmd -e test jest --watchAll --no-cache",
    "test": "npm run test:prepare && npm run test:run",
    "test:ci": "npm run migrate:down && npm run migrate:up && jest"
  },
  "keywords": [],
  "author": "Maksym Pozhydaiev <pogidaevmo@gmail.com>",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.8",
    "@types/supertest": "^2.0.12",
    "cors": "^2.8.5",
    "jest": "^28.1.3",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "axios": "^0.27.2",
    "cron": "^2.1.0",
    "env-cmd": "^10.1.0",
    "jsonwebtoken": "^8.5.1",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.21.3",
    "ts-node-dev": "^2.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.8.1"
  }
}
